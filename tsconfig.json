{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "outDir": "dist",
    "useDefineForClassFields": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "package": ["package.json"],
      "@h3ravel/arquebus": ["src/index.js"],
      "@h3ravel/arquebus/browser": ["src/browser/index.ts"],
      "src": ["src/index.js"],
      "src/*": ["src/*"]
    }
  },
  "include": ["./**/*.d.ts", "./**/*", "src", "types"],
  "exclude": ["./bin", "./dist", "./**/dist", "/.node_modules"]
}

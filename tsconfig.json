{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "package": ["package.json"],
      "sutando": ["src/sutando.ts"],
      "src": ["src/index.ts"],
      "src/*": ["src/*"]
    }
  },
  "include": ["./**/*.d.ts", "./**/*", "src", "types"],
  "exclude": ["./bin", "./dist", "./**/dist", "/.node_modules"]
}
